<div class="jumbotron text-center">
    <h1>Contact Us</h1>

    <br/><br/>

    {{#if responseMessage}}
      <div class="form-horizontal form-group form-group-lg row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
          <div class="alert alert-success">
            <h4>Thank you! Your message is sent.</h4>
            <p>To: {{model.email}}</p>
            <p>Message: {{model.message}}</p>
            <p>Reference ID: {{model.id}}</p>
          </div>
        </div>
      </div>
    {{/if}}

    <div class="form-horizontal has-feedback form-group form-group-lg row {{if model.emailValid 'has-success'}}">
        <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-5 col-md-offset-2">
          {{input type="email" value=model.email class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
          {{#if model.emailValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
        </div>
    </div>
    <div class="form-horizontal has-feedback form-group form-group-lg row {{if model.messageValid 'has-success'}}">
        <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
          {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=model.message}}
          {{#if model.messageValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
        </div>
    </div>
    <div class="form-horizontal form-group form-group-lg row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-7 col-md-3 col-md-offset-7">
          <button class="btn btn-primary btn-lg btn-block" disabled={{model.isDisabled}} {{action 'saveContact' model}}>Send message</button>
      </div>
    </div>

    <br/><br/>
</div>
